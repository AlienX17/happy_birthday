<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#C1C0C0"
        android:src="@drawable/logo"
        />
    <ImageView
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/logo"
        android:background="#8E8E8E"
        />

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/space1"
        android:background="#C1C0C0"
        android:src="@drawable/alienprofile"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/space1"
        android:layout_toRightOf="@id/logo2"
        android:background="#C1C0C0"
        android:textSize="50sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@android:color/white"

        android:text="AlienX Founder"/>

    <ImageView
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/logo2"
        android:background="#8E8E8E"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/space2"
        android:background="#C1C0C0"
        android:textSize="30sp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textColor="#47EC08"
        android:text="Site - aliensbuilds.com"/>

    <ImageView
        android:id="@+id/space3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/text2"
        android:background="#8E8E8E"
        />

    <ImageView
        android:id="@+id/location"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/space3"
        android:background="#C1C0C0"
        android:src="@drawable/location"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/space3"
        android:layout_toRightOf="@id/logo2"
        android:background="#C1C0C0"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:text="STR Republicii 12"/>

    <ImageView
        android:id="@+id/space4"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/text3"
        android:background="#8E8E8E"
        />

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/space4"
        android:background="#C1C0C0"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed-light"
        android:textColor="@android:color/white"
        android:text="Our site is about Minecraft maps --------------------------------------------- more text"/>

</RelativeLayout>